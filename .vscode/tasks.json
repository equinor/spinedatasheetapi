{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/datasheetapi/datasheetapi.csproj"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "dotnet",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/datasheetapi"
                ],
                "pattern": {
                    "regexp": "^(.*\\.cs)\\((\\d+)\\):\\s+(error|warning)\\s+(.*):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "code": 4,
                    "message": 5
                }
            }
        }
    ]
}
